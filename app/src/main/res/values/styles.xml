<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultText">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="TextTitle" parent="DefaultText">
        <item name="android:textColor">@color/ufps_texto_oscuro</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextTitleLabel" parent="DefaultText">
        <item name="android:textColor">@color/ufps_texto_oscuro</item>
        <item name="android:fontFamily">@font/poppins_semibold_italic</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextGeneral" parent="DefaultText">
        <item name="android:textColor">@color/ufps_texto_oscuro</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DefaultButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
    </style>
    <style name="PrincipalWhiteButton" parent="DefaultButton">
        <item name="backgroundTint">@color/ufps_blanco_favorito</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="strokeColor">@color/ufps_blanco_favorito_segundo</item>
    </style>
    <style name="PrincipalRedButton" parent="DefaultButton">
        <item name="backgroundTint">@color/ufps_principal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="PrincipalBlueButton" parent="DefaultButton">
        <item name="backgroundTint">@color/ufps_secundario</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="SecondaryWhiteButton" parent="DefaultButton">
        <item name="backgroundTint">@color/ufps_blanco_favorito</item>
        <item name="android:textColor">@color/ufps_principal</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/ufps_principal</item>
    </style>
</resources>