<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android:layout_marginTop=&quot;70dp&quot;" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/ufps_blanco_favorito">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="40dp">

            <!-- Mensaje de validación -->
            <TextView
                android:id="@+id/textValidationMessage"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="✓ El estudiante pertenece a la UFPS"
                android:textColor="@color/ufps_success_oscuro"
                android:background="@color/ufps_success_claro"
                android:padding="12dp"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_example_image" />


            <!-- Información del estudiante -->
            <LinearLayout
                android:id="@+id/infoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                >

                <!-- Nombre -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_name"
                        style="@style/TextTitleLabel"/>
                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=" Juan David Rodriguez Cordoba"
                        style="@style/TextGeneral" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/ufps_texto_principal" />

                <!-- Código -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_code"
                        style="@style/TextTitleLabel"/>
                    <TextView
                        android:id="@+id/textCode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=" 1152669"
                        style="@style/TextGeneral" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/ufps_texto_principal" />

                <!-- Carrera -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_career"
                        style="@style/TextTitleLabel"/>
                    <TextView
                        android:id="@+id/textCareer"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=" Ingeniería de Sistemas"
                        style="@style/TextGeneral" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/ufps_texto_principal" />

                <!-- Estado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_status"
                        style="@style/TextTitleLabel"/>
                    <TextView
                        android:id="@+id/textStatus"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text=" Matriculado"
                        style="@style/TextGeneral" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/ufps_texto_principal" />

            </LinearLayout>

            <!-- Botón Regresar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/PrincipalRedButton"
                android:layout_width="match_parent"
                android:minWidth="300dp"
                android:layout_height="wrap_content"
                android:text="@string/text_button_back"
                android:layout_marginTop="70dp"
                />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>