<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".ui.home.QRScannerActivity">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back_icon"
            app:iconSize="20dp"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_label_qr_scanner"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            />

        <FrameLayout
            android:id="@+id/scannerContainer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp">

            <com.journeyapps.barcodescanner.DecoratedBarcodeView
                android:id="@+id/barcodeScannerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/imgFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/scanner_frame"
                android:scaleType="fitXY"
                android:background="@android:color/transparent" />
        </FrameLayout>
        <!-- BotÃ³n linterna -->
        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="22dp"
            android:layout_height="38dp"
            android:layout_below="@id/scannerContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/flashlight_icon"
            android:background="@android:color/transparent"
            app:tint="@android:color/white"
            app:iconSize="8dp"
            />

    </RelativeLayout>
