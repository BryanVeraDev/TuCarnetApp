<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    tools:context=".ui.home.fragment.IdCardFragment">

    <!-- Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCarnet"
        android:layout_width="0dp"
        android:layout_height="550dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="58dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="true"
            android:clipToPadding="true"
            android:background="@android:color/white">

            <!-- Contenedor para las elipses superiores con clip -->
            <View
                android:id="@+id/topWavesBackground"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@drawable/top_waves_combined"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Ola gris decorativa media -->
            <ImageView
                android:id="@+id/grayWave"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/bg_gray_wave"
                android:scaleType="fitXY"
                android:layout_marginTop="220dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Profile Circle Container -->
            <View
                android:id="@+id/redCircleBg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/profile_placeholder"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardProfile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="120dp"
                app:cardElevation="4dp"
                android:layout_marginTop="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivProfilePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_placeholder"
                    tools:src="@tools:sample/avatars"/>
            </androidx.cardview.widget.CardView>

            <!-- Student Name -->
            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUAN DAVID\nRODRÍGUEZ CORDOBA"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:lineSpacingExtra="1dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/cardProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Student Code -->
            <TextView
                android:id="@+id/tvStudentCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÓDIGO : 1152810"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvStudentName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Student CC -->
            <TextView
                android:id="@+id/tvStudentCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CC : 1093123452"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/tvStudentCode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Student Carrera -->
            <TextView
                android:id="@+id/tvStudentCarrera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARRERA: Ing Sistemas"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/tvStudentCC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <!-- FrameLayout para contener todas las capas de ondas inferiores -->
            <FrameLayout
                android:id="@+id/bottomWavesContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipChildren="true"
                android:clipToPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvStudentCarrera"
                >

                <!-- Onda superior izquierda (primera capa) -->
                <ImageView
                    android:id="@+id/ivBottomWaveTop"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="top"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/wave_bottom_left"
                    android:layout_marginTop="40dp"/>

                <!-- Ondas inferiores combinadas (capas 2 y 3) -->
                <ImageView
                    android:id="@+id/ivBottomWaves"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="bottom"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/wave_bottom_right"/>

                <!-- Student Type Label encima de todo -->
                <TextView
                    android:id="@+id/tvStudentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESTUDIANTE"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="20dp"/>
            </FrameLayout>

            <!-- QR Code Container - DEBE IR DESPUÉS DEL FRAMELAYOUT PARA QUEDAR ENCIMA -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardQR"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toBottomOf="@id/tvStudentCC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivQRCode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/qr_placeholder"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation Section -->
    <LinearLayout
        android:id="@+id/layoutBottomNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardCarnet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivUniversityLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_recable_logo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>